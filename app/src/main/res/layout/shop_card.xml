<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card_frame_layout"
    android:gravity="center">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/button_ad_padding"
        android:background="@drawable/background_card_frame_layout"
        android:backgroundTint="@color/colorBackgroundDialog"
        android:padding="@dimen/button_ad_padding">

        <ImageView
            android:id="@+id/premiumIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/guideline21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvMessage2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/crown_small" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/magic_dreams"
            android:gravity="bottom|center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="FANTASY"
            android:textColor="@color/colorBackgroundTitleDialog"
            android:textSize="@dimen/shop_card_title_text_size"
            app:layout_constraintBottom_toTopOf="@+id/guideline21"
            app:layout_constraintEnd_toEndOf="@+id/tvMessage"
            app:layout_constraintStart_toEndOf="@+id/imageIcon"
            app:layout_constraintTop_toTopOf="@+id/imageIcon"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Yes, we know you are into vampires, werewolves and all kinds of crazy."
            android:textSize="@dimen/shop_card_message_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvMessage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline21" />

        <Button
            android:id="@+id/btnPurchase"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:gravity="center"
            android:paddingStart="@dimen/button_ad_padding"
            android:paddingEnd="@dimen/button_ad_padding"
            android:text="$0.99"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/shop_card_button_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.36" />

        <TextView
            android:id="@+id/tvMessage2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|fill_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="20 New Choices"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/shop_card_message_2_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnPurchase"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline21"
            app:layout_constraintWidth_percent="0.3" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:srcCompat="@drawable/flame" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>